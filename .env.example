# Environment Variables Template
# Copy this to .env and fill in your actual values

# TextRP Credentials (required)
TEXTRP_HOMESERVER=https://synapse.textrp.io
TEXTRP_USERNAME=@yourbot:synapse.textrp.io
# TextRP uses bearer token authentication (tokens do not expire)
TEXTRP_ACCESS_TOKEN=syt_your_access_token_here

# TextRP Settings (optional)
TEXTRP_DEVICE_NAME=TextRP Chatbot
# TEXTRP_ROOM_ID is optional - bot will accept room invitations if not set
# TEXTRP_ROOM_ID=!yourroomid:synapse.textrp.io

# XRPL Configuration (optional)
XRPL_NETWORK=mainnet
# XRPL_RPC_URL is optional - overrides network-specific URL
# XRPL_RPC_URL=https://your-custom-rpc-endpoint.com

# Network-specific endpoints (required if not using custom RPC URL)
XRPL_MAINNET_URL=https://xrplcluster.com
XRPL_TESTNET_URL=https://s.altnet.rippletest.net:51234
XRPL_DEVNET_URL=https://s.devnet.rippletest.net:51234

# Bot Settings (optional)
# BOT_COMMAND_PREFIX=!
# BOT_LOG_LEVEL=INFO
# BOT_DM_WELCOME=true  # Send welcome message for first-time DMs
# Set to 'true' if you want the bot to invalidate its token on shutdown (more secure)
# Set to 'false' to keep the token valid across restarts (more convenient)
INVALIDATE_TOKEN_ON_SHUTDOWN=false

# =============================================================================
# FAUCET CONFIGURATION
# =============================================================================

# Faucet Wallet Settings (required for faucet functionality)
# FAUCET_COLD_WALLET is the issuer of TXT tokens (offline, secure)
FAUCET_COLD_WALLET=rColdIssuerAddressHere...
# FAUCET_HOT_WALLET is the distribution wallet controlled by the bot
FAUCET_HOT_WALLET=rHotDistributionWalletHere...
# FAUCET_HOT_WALLET_SEED is the seed for the hot wallet (NEVER commit to repo)
FAUCET_HOT_WALLET_SEED=sYourHotWalletSeedHere...

# Token Configuration (optional)
# FAUCET_TOKEN_NAME is the token symbol (defaults to FAUCET_CURRENCY_CODE if not set)
# FAUCET_TOKEN_ISSUER is the token issuer address (defaults to FAUCET_COLD_WALLET if not set)
# FAUCET_TOKEN_NAME=TXT
# FAUCET_TOKEN_ISSUER=rColdIssuerAddressHere...

# NFT Multiplier Configuration (optional)
# LP_INFO defines NFT collections that multiply faucet rewards
# Format: issuer_address:taxon_id,issuer_address:taxon_id
# Example: LP_INFO=rsRfacvEVocG5rtjV2QcfLEKYyxKnjkjfb:22943,rsRfacvEVocG5rtjV2QcfLEKYyxKnjkjfb:1015
# Multiplier rules: 0 NFTs = base amount, 1 NFT = 1.5×, 2+ NFTs = N× (N = number of NFTs)
# LP_INFO=

# Faucet Operation Settings
FAUCET_DAILY_AMOUNT=100
FAUCET_CURRENCY_CODE=TXT

# FAUCET_WELCOME_ROOM is where new users will be invited (optional)
FAUCET_WELCOME_ROOM=!welcome:room.id
# FAUCET_TRUST_LINE_GUIDE is the URL for setting up TXT trust lines
FAUCET_TRUST_LINE_GUIDE=https://docs.textrp.io/txt-trustline
# FAUCET_DM_WELCOME enables sending personalized DM to new users (true/false)
FAUCET_DM_WELCOME=true

# Faucet Limits and Security
FAUCET_CLAIM_COOLDOWN_HOURS=24
FAUCET_MAX_CLAIMS_PER_WALLET=30
# Enable CAPTCHA/math challenges (true/false)
FAUCET_ENABLE_CAPTCHA=false

# Faucet Admin Settings
FAUCET_ADMIN_USERS=@admin1:synapse.textrp.io,@admin2:synapse.textrp.io
# Minimum XRP balance required to claim (to prevent spam)
FAUCET_MIN_XRP_BALANCE=1

# Faucet Monitoring
# FAUCET_WEBHOOK_URL for notifications (optional)
# FAUCET_ALERT_EMAIL for low balance alerts (optional)
FAUCET_LOW_BALANCE_THRESHOLD=1000
